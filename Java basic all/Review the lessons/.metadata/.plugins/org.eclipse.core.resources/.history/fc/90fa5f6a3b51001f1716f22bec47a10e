	public static void main(String[] arqs) {
		try {
			Reader reader = new FileReader("D:\\\\Java Project\\\\file for text\\\\OutputStr.txt");
			System.out.println(reader.ready());
		} catch (IOException e) {
			// TODO Auto-generated catch block
			e.printStackTrace();
		}
		
	}
}
